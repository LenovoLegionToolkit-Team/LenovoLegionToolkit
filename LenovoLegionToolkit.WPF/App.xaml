<Application
    x:Class="LenovoLegionToolkit.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Exit="Application_Exit"
    ShutdownMode="OnExplicitShutdown"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <wpfui:ControlsDictionary />
                <wpfui:ThemesDictionary Theme="Dark" />
                <ResourceDictionary Source="pack://application:,,,/ColorPicker;component/Styles/DefaultColorPickerStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/Badge.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/CardAction.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/CardControl.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/CardExpander.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/DynamicScrollBar.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/InfoBar.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/NavigationStore.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="{x:Static SystemParameters.FocusVisualStyleKey}">
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource DefaultTextBoxStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource DefaultComboBoxStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="MaxDropDownHeight" Value="320" />
                <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            </Style>
            <Style TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource DefaultComboBoxItemStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource DefaultRadioButtonStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type CheckBox}" BasedOn="{StaticResource DefaultCheckBoxStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>

            <Style TargetType="{x:Type wpfui:NavigationItem}" BasedOn="{StaticResource NavigationStoreItem}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type wpfui:NavigationHeader}" BasedOn="{StaticResource NavigationStoreHeader}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type wpfui:CardControl}" BasedOn="{StaticResource DefaultUiCardControlStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type wpfui:CardAction}" BasedOn="{StaticResource DefaultUiCardActionStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type wpfui:CardExpander}" BasedOn="{StaticResource DefaultUiCardExpanderStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type wpfui:Button}" BasedOn="{StaticResource DefaultUiButtonStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type wpfui:TextBox}" BasedOn="{StaticResource DefaultUiTextBoxStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type wpfui:ToggleSwitch}" BasedOn="{StaticResource DefaultUiToggleSwitchStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type wpfui:NumberBox}" BasedOn="{StaticResource DefaultUiNumberBoxStyle}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>